<div class="main clearfix">
    <div class="main-content">
        <div class="body">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-6">
                            <h1>プロフィール編集</h1>
                        <%= form_for(@user) do |f| %>
                            <div class="field">
                                <%= f.label :施設画像 %><br />
                                <%= f.attachment_field :image, placeholder: "施設画像" %>
                            <div>
                            <div class="field">
                                <%= f.label :施設名 %><br />
                                <%= f.text_field :name ,placeholder: "施設の名前"  %>
                            </div>
                            <div class="field">
                                <%= f.label :email %><br />
                                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                            </div>
                            <div class="field">
                                <%= f.label :電話番号 %><br />
                                <%= f.text_field :telephone ,placeholder: "TEL"  %>
                            </div>
                            <div class="field">
                                <%= f.label :郵便番号 %><br />
                                <%= f.text_field :postcode , placeholder: "○○○-○○○○" %>
                            </div>
                            <div class="field">
                                <%= f.label :住所 %><br />
                                <%= f.text_field :address ,placeholder: "住所"  %>
                            </div>
                            <div class="field">
                                <%= f.label :紹介文 %><br />
                                <%= f.text_field :introduction ,placeholder: "紹介文を書いてください"  %>
                            </div>
                            <div class="field">
                                <%= f.label :紹介動画 %><br />
                                <%= f.text_field :url ,placeholder: "埋め込み用のURLを入れてください。例：http://〇〇.〇〇"  %>
                            </div>
                         <%= f.submit "変更を保存", class:"btn" %>
                        <% end %>
                        </div>
                    </div>
                </div>
            </div>
        <p><%= link_to "退会についてはコチラ", '#' %></p>
    </div>
  </div>
