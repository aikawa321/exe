<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>
 <%= form_for [@user, @review] ,:url => {:action => :new} do |f| %>

        <%= f.hidden_field :userid, value: @user.id %>
        <div class="col-md-6 col-md-offset-3">

                <div class="field" id="star">
                    <%= f.label :star %>
                    <%= f.hidden_field :star, id: :review_star %>
                  </div>

                <%= f.text_area :impression, :class => "form-control", :size => "50x20"  %><br>
                <%= f.submit "レビュー評価", :class => "btn btn-primary" %>

        </div>

        <% end %>

        <script>
        $('#star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          scoreName: 'review[star]'
        });
        </script>
